{
	"name": "gill",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev:tailwind": "npx @tailwindcss/cli -i ./themes/gill/source/css/input.css -o ./public/css/styles.css --watch",
		"build:css": "npx @tailwindcss/cli -i ./themes/gill/source/css/input.css -o ./public/css/styles.css --minify",
		"build": "npm run build:css && hexo generate",
		"generate": "npm run build:css && hexo generate",
		"clean": "hexo clean",
		"deploy": "npm run build:css && hexo deploy",
		"server": "hexo server",
		"dev": "hexo clean && concurrently \"npm run dev:tailwind\" \"hexo server\""
	},
	"hexo": {
		"version": "7.3.0"
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.1.4",
		"cheerio": "^1.0.0",
		"flowbite": "^4.0.1",
		"hexo": "^7.3.0",
		"hexo-asset-image": "^1.0.0",
		"hexo-generator-archive": "^2.0.0",
		"hexo-generator-category": "^2.0.0",
		"hexo-generator-index": "^4.0.0",
		"hexo-generator-sitemap": "^3.0.1",
		"hexo-generator-tag": "^2.0.0",
		"hexo-renderer-ejs": "^2.0.0",
		"hexo-renderer-marked": "^7.0.0",
		"hexo-renderer-stylus": "^3.0.1",
		"hexo-server": "^3.0.0",
		"js-yaml": "^4.1.0",
		"sharp": "^0.34.1"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.16",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.0.1",
		"flowbite-typography": "^1.0.5",
		"tailwindcss": "^4.1.4"
	},
	"packageManager": "yarn@3.3.1+sha512.e355f587284d06d2c0c1c2259c68746aa1f1f6cdeedefce543cec206709beeb7951c0a27cdbfb7b5736a576854829af9c660bbe82052192c49f108a546994b71"
}
