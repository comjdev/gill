<aside class="hidden xl:block" aria-labelledby="sidebar-label">
	<div class="xl:w-[336px] sticky top-6">
		<h3 id="sidebar-label" class="sr-only">Sidebar</h3>
		<%- partial('_partials/aside/contact') %>
		<div class="mb-12">
			<h4 class="mb-4 text-sm font-light text-gray-900 uppercase">
				My Services
			</h4>

			<% site.pages.filter(page => page.layout ===
			'service').forEach(function(service, index) { %>
			<div class="mb-6 flex items-center">
				<a href="<%= url_for(service.path) %>" class="shrink-0">
					<img
						src="<%= url_for(service.image) %>"
						class="mr-4 max-w-full w-24 h-24 object-cover rounded-md"
						alt="<%= service.title.replace(/\s+in\s+Melbourne/i, '') %> | Gill Juergens Photography"
						loading="lazy"
					/>
				</a>
				<div>
					<h5 class="mb-2 text-lg font-light leading-tight text-gray-900">
						<%= service.title.replace(/\s+in\s+Melbourne/i, '') %>
					</h5>
					<p class="text-sm font-light text-gray-900">
						<%= service.title.replace(/\s+in\s+Melbourne/i, '') %> services for
						<%= typeof suburb !== 'undefined' && suburb ? suburb : 'Melbourne'
						%>, VIC, Australia
					</p>
					<a
						href="<%= url_for(service.path) %>"
						class="inline-flex items-center font-light underline underline-offset-4 text-primary-600 hover:no-underline"
					>
						Learn more
					</a>
				</div>
			</div>
			<% }); %>
		</div>
	</div>
</aside>
