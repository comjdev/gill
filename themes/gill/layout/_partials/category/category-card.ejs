<!-- Category Card -->
<div
	class="w-full bg-white border border-gray-200 shadow-sm flex flex-col group"
>
	<a href="<%= url_for(post.path) %>" class="relative overflow-hidden">
		<% if (post.image) { %>
		<img
			class="w-full h-72 md:h-96 lg:h-128 object-cover transition-all duration-300 lg:group-hover:scale-105 lg:group-hover:brightness-75 lg:group-hover:blur-sm"
			src="<%= url_for(post.__permalink + post.image) %>"
			alt="<%= post.title %> | Gill Juergens Photography"
			loading="lazy"
		/>
		<% } %>

		<!-- Overlay content for larger screens only -->
		<div
			class="absolute inset-0 bg-black/20 bg-opacity-0 lg:group-hover:bg-opacity-30 transition-all duration-300 flex items-center justify-center opacity-0 lg:group-hover:opacity-100 hidden lg:flex"
		>
			<div
				class="text-center text-white p-6 transform translate-y-4 lg:group-hover:translate-y-0 transition-all duration-300"
			>
				<h5 class="mb-2 text-2xl font-light tracking-tight text-white">
					<%= post.title %>
				</h5>
				<% if (post.subtitle) { %>
				<p class="mb-4 font-light text-white text-sm"><%= post.subtitle %></p>
				<% } %>
				<button
					class="inline-flex items-center px-4 py-2 text-sm font-light text-center text-white bg-gill-green-600 bg-opacity-20 hover:bg-opacity-30 backdrop-blur-sm transition-all duration-300 cursor-pointer"
				>
					View Shoot
					<svg
						class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
						aria-hidden="true"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 14 10"
					>
						<path
							stroke="currentColor"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M1 5h12m0 0L9 1m4 4L9 9"
						/>
					</svg>
				</button>
			</div>
		</div>
	</a>

	<!-- Content for smaller screens (visible on all screens except lg+) -->
	<div class="p-5 flex flex-col flex-grow lg:hidden">
		<% if (post.categories && post.categories.length) { %>
		<div class="flex flex-wrap gap-2 mb-2">
			<% post.categories.forEach(function(category) { %>
			<a
				href="<%= url_for(getCategoryUrl(category.name)) %>"
				class="bg-gray-100 text-gray-800 text-xs font-light px-2.5 py-0.5 rounded hover:bg-gray-200"
			>
				<%= category.name %>
			</a>
			<% }); %>
		</div>
		<% } %>
		<a href="<%= url_for(post.path) %>">
			<h5 class="mb-2 text-2xl font-light tracking-tight text-gray-900">
				<%= post.title %>
			</h5>
		</a>
		<% if (post.subtitle) { %>
		<p class="mb-3 font-light text-gray-900"><%= post.subtitle %></p>
		<% } %>
		<div class="mt-auto">
			<a
				href="<%= url_for(post.path) %>"
				class="inline-flex items-center px-3 py-2 text-sm font-light text-center text-white bg-primary-700 hover:bg-primary-800"
			>
				Read more
				<svg
					class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
					aria-hidden="true"
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 14 10"
				>
					<path
						stroke="currentColor"
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M1 5h12m0 0L9 1m4 4L9 9"
					/>
				</svg>
			</a>
		</div>
	</div>
</div>
