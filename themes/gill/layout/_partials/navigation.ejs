<div class="py-2 mt-2 sm:mt-3 sm:mb-2">
	<nav
		class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
	>
		<a
			href="<%- url_for() %>"
			class="mb-2 ml-4 font-extrabold tracking-tight leading-none"
		>
			<span class="inline-block w-32 md:w-40 lg:w-64 logo-container">
				<%- getSvg('logos/logo-horizontal.svg') %>
			</span>
		</a>

		<!-- Mobile menu overlay -->
		<div
			id="mobile-overlay"
			class="fixed inset-0 bg-black/70 z-40 hidden md:hidden"
		></div>

		<!-- Mobile menu -->
		<div
			id="nav"
			class="fixed top-0 right-0 h-full w-80 bg-white shadow-lg z-50 transform translate-x-full transition-transform duration-300 ease-in-out md:relative md:translate-x-0 md:w-auto md:h-auto md:bg-transparent md:shadow-none"
		>
			<!-- Mobile menu header -->
			<div class="flex justify-between items-center p-6 border-b md:hidden">
				<span class="text-lg font-light text-gray-800">Menu</span>
			</div>

			<!-- Navigation links -->
			<ul
				class="flex flex-col md:flex-row md:items-center md:gap-6 lg:gap-12 xl:gap-12"
			>
				<li class="border-b border-gray-100 md:border-none">
					<a
						href="/"
						class="block px-6 py-4 text-gray-800 hover:text-primary-600 transition-colors md:px-0 md:py-0 md:text-sm md:uppercase md:text-primary-700 md:hover:text-primary-500"
					>
						Home
					</a>
				</li>
				<% for(name in theme.menu) { %>
				<li class="border-b border-gray-100 md:border-none">
					<a
						href="<%- url_for(theme.menu[name]) %>"
						class="block px-6 py-4 text-gray-800 hover:text-primary-600 transition-colors md:px-0 md:py-0 md:text-sm md:uppercase md:text-primary-700 md:hover:text-primary-500"
					>
						<%= name %>
					</a>
				</li>
				<% } %>
				<li class="border-b border-gill-green-100 md:border-none">
					<a
						href="<%= url_for('/book-lifestyle-photographer-in-melbourne/') %>"
						class="block px-6 py-4 bg-gill-green-600 text-white hover:bg-gill-green-700 transition-colors md:px-7 md:py-3 md:mr-4 md:inline-block"
					>
						Get in touch
					</a>
				</li>
			</ul>
		</div>

		<!-- Hamburger menu button -->
		<div class="flex md:hidden flex-1 justify-end mr-4 mb-2">
			<button type="button" id="hamburger" class="z-50 relative">
				<div class="w-6 h-6 flex flex-col justify-center items-center">
					<span
						class="hamburger-line w-6 h-0.5 bg-gray-800 rounded transition-all duration-300"
					></span>
					<span
						class="hamburger-line w-6 h-0.5 bg-gray-800 rounded transition-all duration-300 mt-1"
					></span>
					<span
						class="hamburger-line w-6 h-0.5 bg-gray-800 rounded transition-all duration-300 mt-1"
					></span>
				</div>
			</button>
		</div>
	</nav>
</div>
