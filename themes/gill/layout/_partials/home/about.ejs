<section class="bg-white">
	<!-- Row 1: Text (2/3) | Image (1/3) -->
	<div
		class="gap-16 items-center py-8 px-4 mx-auto max-w-screen-xl lg:grid lg:grid-cols-3 lg:py-16 lg:px-6"
	>
		<div class="font-light text-gray-900 sm:text-lg lg:col-span-2">
			<h2 class="mb-1 text-6xl font-[Meritocracy] tracking-tight text-gray-900">
				About Gill
			</h2>
			<h3 class="mb-6 text-base tracking-tight text-gray-900">
				<%= site.data.homepage.title %>
			</h3>
			<% site.data.homepage.about.slice(0, 3).forEach(function(paragraph, index)
			{ %>
			<p class="<%= index === 2 ? '' : 'mb-4' %>"><%= paragraph %></p>
			<% }); %>
		</div>

		<img
			class="w-full hidden lg:block"
			src="/img/gill.jpg"
			alt="Gill Juergens Photography | Lifestyle Photographer Melbourne"
			loading="lazy"
		/>
	</div>

	<!-- Row 2: Image (1/3) | Text (2/3) -->
	<div
		class="gap-16 items-center py-8 px-4 mx-auto max-w-screen-xl lg:grid lg:grid-cols-3 lg:py-16 lg:px-6"
	>
		<img
			class="w-full lg:col-span-1 hidden lg:block"
			src="/img/about.jpg"
			alt="Gill Juergens Photography | Lifestyle Photographer Melbourne"
			loading="lazy"
		/>

		<div class="font-light text-gray-900 sm:text-lg lg:col-span-2">
			<% site.data.homepage.about.slice(3).forEach(function(paragraph, index) {
			%>
			<p
				class="<%= index === site.data.homepage.about.slice(3).length - 1 ? '' : 'mb-4' %>"
			>
				<%= paragraph %>
			</p>
			<% }); %>
		</div>
	</div>

	<!-- Buttons Section -->
	<div class="flex justify-center gap-4 py-8">
		<a
			href="/book-lifestyle-photographer-in-melbourne"
			class="inline-flex items-center px-6 py-3 text-sm font-light text-white bg-gill-green-600 border border-transparent shadow-sm hover:bg-gill-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gill-green-500 transition-colors duration-200"
		>
			Get in Touch
		</a>
		<a
			href="/melbourne-lifestyle-photographer"
			class="inline-flex items-center px-6 py-3 text-sm font-light text-gill-green-600 bg-white border border-gill-green-600 hover:bg-gill-green-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gill-green-500 transition-colors duration-200"
		>
			Learn More About Gill
		</a>
	</div>
</section>
