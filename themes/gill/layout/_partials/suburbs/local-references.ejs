<!-- prettier-ignore -->
<section class="bg-white">
	<div class="py-8 px-4 mx-auto max-w-screen-xl text-center sm:py-16 lg:px-6">
		<h2 class="mb-4 text-4xl tracking-tight font-light text-gray-900">
			Local References in <%= suburb %>
		</h2>
		<p class="text-gray-500 sm:text-xl">
			Discover beautiful locations and local spots perfect for your photography session.
		</p>
		<div class="mt-8 lg:mt-12 space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
			<!-- prettier-ignore -->
			<% 
			// Get local references from page front matter, fallback to default if not available
			var references = page.local_references || [
				{ name: 'Local Parks', description: 'Beautiful outdoor spaces perfect for family photography' },
				{ name: 'Historic Areas', description: 'Charming locations with character and charm' },
				{ name: 'Local Landmarks', description: 'Iconic spots that make your photos unique' }
			];
			%>

			<% references.forEach(function(reference, index) { %>
			<div>
				<svg class="mx-auto mb-4 w-12 h-12 text-gill-green-600" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
				</svg>
				<h3 class="mb-2 text-xl font-light text-gray-900"><%= reference.name %></h3>
				<p class="mb-4 text-gray-500"><%= reference.description %></p>
				<% if (reference.link) { %>
				<a href="<%= reference.link %>" class="text-sm text-gill-green-500 hover:text-gill-green-700">More info</a>
				<% } %>
			</div>
			<% }); %>
		</div>
	</div>
</section>
