<!-- prettier-ignore -->
<section class="py-8 lg:py-24 bg-gray-50">
	<div class="px-4 mx-auto max-w-screen-xl">
		<div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-16">
			<h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
				Local References in <%= suburb %>
			</h2>
			<p class="font-light text-gray-900 sm:text-xl">
				Discover beautiful locations and local spots perfect for your photography session.
			</p>
		</div>

		<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
			<!-- prettier-ignore -->
			<% 
			// Get local references from page front matter, fallback to default if not available
			var references = page.local_references || [
				{ name: 'Local Parks', description: 'Beautiful outdoor spaces perfect for family photography' },
				{ name: 'Historic Areas', description: 'Charming locations with character and charm' },
				{ name: 'Local Landmarks', description: 'Iconic spots that make your photos unique' }
			];
			%>

			<% references.forEach(function(reference, index) { %>
			<div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
				<div class="flex items-center mb-4">
					<div class="flex-shrink-0">
						<div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
							<svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
							</svg>
						</div>
					</div>
					<div class="ml-3">
						<h3 class="text-lg font-semibold text-gray-900"><%= reference.name %></h3>
					</div>
				</div>
				<p class="text-gray-500"><%= reference.description %></p>
			</div>
			<% }); %>
		</div>
	</div>
</section>
