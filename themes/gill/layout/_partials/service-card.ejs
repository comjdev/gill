<div class="flex mb-2 md:flex-col md:mb-0">
	<img
		class="mr-4 w-auto h-36 md:w-full md:h-auto rounded-lg object-cover"
		src="<%= image %>"
		alt="<%= title %>"
	/>
	<div>
		<h3 class="text-xl font-bold md:mt-4 mb-2.5 text-gray-900"><%= title %></h3>
		<p class="text-gray-500 mb-4"><%= description %></p>
		<a
			href="<%= link %>"
			class="inline-flex items-center text-lg font-medium text-gill-green-600 hover:text-gill-green-800 transition-colors"
		>
			<%= buttonText %>
			<svg
				class="ml-1 w-6 h-6"
				fill="currentColor"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					fill-rule="evenodd"
					d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
					clip-rule="evenodd"
				></path>
			</svg>
		</a>
	</div>
</div>
