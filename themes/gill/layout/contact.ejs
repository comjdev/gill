<main class="contact-page">
	<div class="container mx-auto px-4 py-12">
		<div class="max-w-7xl mx-auto">
			<h1
				class="text-4xl tracking-tight font-extrabold text-gray-900 mb-12 text-center"
			>
				<%= page.title %>
			</h1>

			<!-- Two Column Layout: Content and Form -->
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
				<!-- Content Column -->
				<div class="space-y-8">
					<!-- Page Content -->
					<div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100">
						<div class="prose prose-lg max-w-none text-gray-600">
							<%- page.content %>
						</div>
					</div>

					<!-- Service Links -->
					<div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
						<h3 class="text-xl font-bold text-gray-900 mb-4">Our Services</h3>
						<div class="grid gap-4">
							<a
								href="/services/family"
								class="inline-flex justify-center items-center p-4 text-base font-medium text-gray-500 bg-gray-50 rounded-lg hover:text-gray-900 hover:bg-gray-100"
							>
								<span class="w-full">Family Photography</span>
								<svg
									class="ml-3 w-5 h-5"
									fill="currentColor"
									viewBox="0 0 20 20"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										fill-rule="evenodd"
										d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
										clip-rule="evenodd"
									></path>
								</svg>
							</a>
							<a
								href="/services/wedding"
								class="inline-flex justify-center items-center p-4 text-base font-medium text-gray-500 bg-gray-50 rounded-lg hover:text-gray-900 hover:bg-gray-100"
							>
								<span class="w-full">Wedding Photography</span>
								<svg
									class="ml-3 w-5 h-5"
									fill="currentColor"
									viewBox="0 0 20 20"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										fill-rule="evenodd"
										d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
										clip-rule="evenodd"
									></path>
								</svg>
							</a>
							<a
								href="/services/newborn"
								class="inline-flex justify-center items-center p-4 text-base font-medium text-gray-500 bg-gray-50 rounded-lg hover:text-gray-900 hover:bg-gray-100"
							>
								<span class="w-full">Newborn Photography</span>
								<svg
									class="ml-3 w-5 h-5"
									fill="currentColor"
									viewBox="0 0 20 20"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										fill-rule="evenodd"
										d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
										clip-rule="evenodd"
									></path>
								</svg>
							</a>
							<a
								href="/services/maternity"
								class="inline-flex justify-center items-center p-4 text-base font-medium text-gray-500 bg-gray-50 rounded-lg hover:text-gray-900 hover:bg-gray-100"
							>
								<span class="w-full">Maternity Photography</span>
								<svg
									class="ml-3 w-5 h-5"
									fill="currentColor"
									viewBox="0 0 20 20"
									xmlns="http://www.w3.org/2000/svg"
								>
									<path
										fill-rule="evenodd"
										d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
										clip-rule="evenodd"
									></path>
								</svg>
							</a>
						</div>
					</div>
				</div>

				<!-- Form Column -->
				<div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100">
					<h2
						class="text-2xl tracking-tight font-extrabold text-gray-900 mb-4 text-center"
					>
						Get in Touch
					</h2>
					<p class="text-gray-600 mb-8 text-center">
						Ready to capture your special moments? Fill out the form below and
						I'll be in touch soon.
					</p>
					<div class="w-full">
						<iframe
							id="sn-form-puftr"
							src="https://app.studioninja.co/contactform/parser/0a800fc9-7801-1bf2-8178-1a1deab31908/0a800fc8-7801-1f4a-8178-1abb80313915"
							height="616"
							scrolling="no"
							style="width: 100%; border: 0"
						></iframe>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>

